{
  "info": {
    "name": "Yami Betting Platform - API Collection",
    "description": "Complete API collection for the Yami Betting Platform microservices with JWT authentication demo",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url_main",
      "value": "http://localhost:3001"
    },
    {
      "key": "base_url_fixtures", 
      "value": "http://localhost:3002"
    },
    {
      "key": "jwt_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "üîê Authentication Demo",
      "item": [
        {
          "name": "1. Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('jwt_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@admin.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url_main}}/auth/login",
              "host": ["{{base_url_main}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "2. Access WITH Token ‚úÖ",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url_main}}/api/user/stats",
              "host": ["{{base_url_main}}"],
              "path": ["api", "user", "stats"]
            }
          }
        },
        {
          "name": "3. Access WITHOUT Token ‚ùå",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_main}}/api/user/stats",
              "host": ["{{base_url_main}}"],
              "path": ["api", "user", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "‚öΩ Live Data API",
      "item": [
        {
          "name": "Get Live Matches",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url_main}}/api/fixtures/live",
              "host": ["{{base_url_main}}"],
              "path": ["api", "fixtures", "live"]
            }
          }
        }
      ]
    }
  ]
} 